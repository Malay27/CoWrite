{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "client",
        "use": "@vercel/vite"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/api/(.*)", "dest": "api/$1" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
  }
  